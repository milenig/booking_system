@using System.Web.UI.WebControls
@model DataAccess.Model.Reservation
@{
    Layout = null;
    ViewBag.Title = "CreateReservation";
}

<!--Section: Contact v.2-->
<section class="mb-4">

        <!--Section heading-->
        <h2 class="h1-responsive font-weight-bold text-center my-4">Rezervace</h2>
        <!--Section description-->
        
        <div class="row">
            <div class="col-md-9 mb-md-0 mb-5">
                @Html.ValidationSummary()
                @using (Html.BeginForm("AddReservation", "Reservation", FormMethod.Post, new { enctype = "multipart/form-data", @id = "contact-form" }))
                {
                    Html.HiddenFor(x => x.Tour);
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label class="col-sm-2 control-label">Jmeno</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Jmeno, new { @class = "form-control", @type="text", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Jmeno)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label class="col-sm-2 control-label">Prijmeni</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Prijmeni, new { @class = "form-control", @type = "text", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Prijmeni)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Email)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label class="col-sm-2 control-label">Telefon</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control", @type = "tel", @pattern = "[0-9]{3} [0-9]{3} [0-9]{3}", @placeholder="Format: 123 456 789", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Telefon)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                <label class="col-sm-1 control-label">Adresa</label>
                                <div class="col-sm-11">
                                    @Html.TextBoxFor(x => x.Adresa, new { @class = "form-control", @type = "text", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Adresa)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                <label class="col-sm-1 control-label">Zajezd</label>
                                <div class="col-sm-11">
                                    @Html.ListBox("tourId", new SelectList(ViewBag.Tour, "Id", "Name"), new { @class = "form-control psrt",@id="target" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="center-block">
                            <div class="md-form mb-0">
                                <button type="submit" class="btn btn-primary">Rezervovat</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            @{
                Html.RenderAction("RezervaceDetailSide","Reservation");
            }
        </div>
    </section>
