@model DataAccess.Model.Blog
@{
    ViewBag.Title = "CreateBlog";
}

<h2>Novy blog post</h2>

<!--ispisivanje svih gresaka na jednom mestu-->
@Html.ValidationSummary()

@using (Html.BeginForm("AddBlog", "Blog", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label class="col-sm-2 control-label">Titulek blogu</label>
        <div class="col-sm-10">
            <!--<input type="text" class="form-control" name="name" />-->
            @Html.TextBoxFor(x => x.Header, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(x => x.Header)
        </div>
    </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" style="margin-right: 15px;">Datum:</label>
                <div class='input-group date col-sm-3' id='datetimepicker3'>
                    @Html.TextBoxFor(x => x.Datum, new { @type = "text", @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Datum)
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Lokace</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Location, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(x => x.Location)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Index</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new {@class = "form-control formatedtext"})
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Vytvorit blog</button>
        </div>
    </div>
}

<script src="https://cloud.tinymce.com/5/tinymce.min.js"></script>
<script>tinymce.init({ selector: '.formatedtext' });</script>

