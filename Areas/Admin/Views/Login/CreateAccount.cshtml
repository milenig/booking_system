@model DataAccess.Model.KnihovnaUser
@{
    ViewBag.Title = "Sign Up";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">
    <title>Login</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/sign-in/">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <style type="text/css">
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>
</head>
<body class="text-center">

    @if (TempData["error"] != null)
    {
        <p>@TempData["error"]</p>
    }
    @using (Html.BeginForm("AddAccount", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {
        <div class="log-cont">
            <div>
                <h1 class="h3 mb-3 font-weight-normal">Create account</h1>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label for="inputEmail" class="sr-only">Jmeno</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @id = "inputName", @name = "login", @placeholder = "Jmeno", @type = "text" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label for="inputEmail" class="sr-only">Prijmeni</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @id = "inputSurname", @name = "login", @placeholder = "Prijmeni", @type = "text" })
                        @Html.ValidationMessageFor(x => x.Surname)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label for="inputEmail" class="sr-only">Login</label>
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @id = "inputUsername", @name = "login", @placeholder = "username", @type = "text" })
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label for="inputPassword" class="sr-only">Heslo</label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @id = "inputPassword", @name = "login", @placeholder = "heslo", @type = "password" })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
            </div>
        </div>
    }

</body>
</html>


