@model DataAccess.Model.KnihovnaUser
@{
    ViewBag.Title = "EditWorker";
}

<h2>Zmena udaju zamestnance @Model.Name @Model.Surname</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("UpdateWorker", "Tours", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="col-sm-2 control-label">Jmeno</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Prijmeni</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(x => x.Surname)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Login</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @type = "text" })
            @Html.ValidationMessageFor(x => x.Login)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Heslo</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control formatedtext", @type = "password" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Role</label>
        <div class="col-sm-10">
            @Html.DropDownList("roleId", new SelectList(ViewBag.Zamestnanci, "Id", "RoleDescription"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Upravit blog</button>
        </div>
    </div>
}

