@model DataAccess.Model.Destination
@{
    ViewBag.Title = "CreateCategory";
}

<h2>CreateDestination</h2>

<!--ispisivanje svih gresaka na jednom mestu-->
@Html.ValidationSummary()

@using (Html.BeginForm("AddCategory", "Tours", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label class="col-sm-2 control-label">Nazev destinace</label>
        <div class="col-sm-10">
            <!--<input type="text" class="form-control" name="name" />-->
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Popis destinace</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @style= "min-height:140px;max-width:100% !important;" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Vytvorit</button>
        </div>
    </div>
}


